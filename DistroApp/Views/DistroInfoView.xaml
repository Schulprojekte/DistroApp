<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:DistroApp"
             x:Class="DistroApp.DistroInfoView">

    <ContentPage.BindingContext>
        <local:DistroInfoViewModel></local:DistroInfoViewModel>
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <StackLayout BackgroundColor="#282828">
            <Frame BackgroundColor="#121212" Padding="24" CornerRadius="0">
                <Label Text="{Binding AnzeigeDistroName}" TextColor="White" HorizontalTextAlignment="Center" FontSize="36"/>
            </Frame>
            <Label  Text="{Binding AnzeigeDistroInfo}" TextColor="White" FontSize="Medium" Padding="30,10,30,10"/>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>